{
  "name": "pluckeye_zen-mode",
  "version": "1.0.0",
  "description": "Zen Mode for Pluckeye",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win=portable",
    "port": "electron-builder -p --win"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0"
  },
  "build": {
    "productName": "Zen Mode",
    "appId": "pluckeye.ZenMode",
    "directories": {
      "buildResources": "./build"
    },
    "win": {
        "target": ["portable"],
        "icon": "./build/logo.ico"
    },
    "portable": {
        "artifactName": "zen-mode.exe"
    }
}
}
